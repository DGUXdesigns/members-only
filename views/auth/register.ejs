<div class="form-wrapper">
  <div class="form-container">
    <h1>Sign Up</h1>

    <form action="/auth/register" method="POST" novalidate>
      <div class="form-control">
        <label for="firstName">First Name</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          autocomplete="given-name"
          value="<%= oldInput.firstName || '' %>"
          required
        />
        <div class="error">
          <% if (errors.firstName) { %>
          <p><%= errors.firstName %></p>
          <% } %>
        </div>
      </div>
      <div class="form-control">
        <label for="lastName">Last Name</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          autocomplete="family-name"
          value="<%= oldInput.lastName || '' %>"
          required
        />
        <div class="error">
          <% if (errors.lastName) { %>
          <p><%= errors.lastName %></p>
          <% } %>
        </div>
      </div>
      <div class="form-control">
        <label for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= oldInput.email || '' %>"
          autocomplete="email"
          required
        />
        <div class="error">
          <% if (errors.email) { %>
          <p><%= errors.email %></p>
          <% } %>
        </div>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          autocomplete="off"
          value="<%= oldInput.password || '' %>"
          required
        />
        <div class="error">
          <% if (errors.password) { %>
          <p><%= errors.password %></p>
          <% } %>
        </div>
      </div>
      <div class="form-control">
        <label for="passwordConfirmation">Confirm Password</label>
        <input
          type="password"
          id="passwordConfirmation"
          name="passwordConfirmation"
          autocomplete="off"
          required
        />
        <div class="error">
          <% if (errors.passwordConfirmation) { %>
          <p><%= errors.passwordConfirmation %></p>
          <% } %>
        </div>
      </div>
      <button type="submit">Sign Up</button>
    </form>

    <p>Already have an account? <a href="/auth/login">Log in</a></p>
  </div>
</div>
